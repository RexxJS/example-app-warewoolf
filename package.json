{
  "name": "warewoolf",
  "productName": "warewoolf",
  "version": "2.2.1",
  "description": "A simple novel writing system designed to be usable without a mouse.",
  "main": "src/index.js",
  "scripts": {
    "download-rexxjs": "mkdir -p src/lib && curl -L -o src/lib/rexxjs.bundle.js https://repl.rexxjs.org/repl/dist/rexxjs.bundle.js && echo 'âœ“ RexxJS bundle downloaded'",
    "prestart": "npm run download-rexxjs",
    "start": "electron-forge start",
    "prepackage": "npm run download-rexxjs",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "test": "npm run test:unit && npm run test:playwright",
    "test:unit": "jest",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:debug": "playwright test --debug"
  },
  "keywords": [
    "writing",
    "novel",
    "word processor",
    "writerDeck",
    "minimalist",
    "text",
    "editor",
    "fiction",
    "story",
    "cyberDeck"
  ],
  "author": "Benjamin Sloan",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/assets/icon",
        "extendInfo": "src/plist/Info.plist"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "warewoolf",
            "setupIcon": "src/assets/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "src/assets/icon.png",
              "setupIcon": "src/assets/icon.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "name": "WareWoolf",
            "icon": "src/assets/icon.icns"
          }
        }
      ]
    }
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "docx": "^7.8.2",
    "electron-squirrel-startup": "^1.0.0",
    "nodemailer": "^6.7.5",
    "nspell": "^2.1.5",
    "quill": "^1.3.7",
    "unzipper": "^0.10.14"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-dmg": "^7.3.1",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@playwright/test": "^1.49.0",
    "electron": "^18.2.3",
    "jest": "^29.7.0",
    "playwright": "^1.49.0"
  }
}
